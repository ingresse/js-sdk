{
  "name": "ingresse-sdk",
  "version": "1.0.0",
  "description": "Ingresse JS SDK for NodeJs and Browsers",
  "main": "index.js",
  "scripts": {
    "build": "babel ./src -d ./dist",
    "postbuild": "npm run browser",
    "prebrowser": "mkdir -p ./dist/browser",
    "browser": "browserify -r ./dist/index.js:ingresse-sdk -o ./dist/browser/ingresse-sdk.js",
    "postbrowser": "uglifyjs ./dist/browser/ingresse-sdk.js  -o ./dist/browser/ingresse-sdk.js",
    "lint": "eslint ./src/**/*.js",
    "docs": "esdoc -c ./esdoc.json"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "browserify": "^13.1.0",
    "esdoc": "^0.4.8",
    "eslint": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/ingresse/js-sdk"
  },
  "keywords": [
    "ingresse",
    "sdk"
  ],
  "author": "Vitor Leal <vitor.leal@ingresse.com>",
  "license": "MIT",
  "dependencies": {
    "popsicle": "^8.1.1",
    "popsicle-status": "^2.0.0",
    "uglify": "^0.1.5"
  }
}
